root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = 4

[*.toml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab